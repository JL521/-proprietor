/* miniprogram/pages/home/votedetail/votedetail.wxss */
page{
  padding: 10px;
  margin: 0;
  width: auto;
}

.notice{
  font-size: 8pt;
  text-align: center;
  color: rgb(120, 120, 120);
  margin-bottom: 10px;
  box-sizing:border-box;
  width: 100%;
  display: inline-block;
}

.dyhname{
  font-size: 10pt;
  width: 100%;
  border-bottom: rgb(35, 216, 240);
  border-bottom-width: 1px;
  border-bottom-style: solid;
}
.dyh{
  width: 100%;
  margin-bottom: 10px;
  text-align: center;
}

.container{
  box-sizing:border-box;
  width: 100%;
}

.vote{
  box-sizing:border-box;
  background-color: white;
  width: 100%;
  border-radius: 10px;
  padding: 10px;
}

.votedetail{
  display: flex;
  flex-direction: column;
}

.coment-text{
  display: inline-block;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin-right: 1px;
  font-size: 10pt;
}

.vote-title{
  font-size: 12pt;
  text-align: center;
  margin-bottom: 10px;
}

.vote-content{
  font-size: 10pt;
}

.vote-btn{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.btn{
  font-size: 10pt;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  margin-right: 5px;
}

.btnimg{
  width: 20px;
  height: 20px;
}

.btn-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tab{
  box-sizing:border-box;
  margin-top: 10px;
  border-width: 1px;
  border-style: solid;
  border-color: cadetblue;
  width: 100%;
  margin-bottom: 40px;
}
.item{
  box-sizing:border-box;
  width: 100%;
  margin-top: 5px;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: cadetblue;
}

.name{
  /* height: 40px; */
  display: inline-block;
  width: 49%;
  text-align: center;
  /* line-height: 40px; */
  border-right-width: 1px;
  border-right-style: solid;
  border-right-color: cadetblue;

}


.comment{
  height: 40px;
  display: inline-block;
  width: 49%;
  text-align: center;
  line-height: 40px;
}
