/* miniprogram/pages/home/publishvote/publishvote.wxss */
page{
  padding: 10px;
  margin: 0;
  width: auto;
}

.container{
  box-sizing:border-box;
  width: 100%;
}

.title{
  box-sizing:border-box;
  background-color: white;
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-radius: 10px;
  text-align: center;
  padding: 5px;
  margin-bottom: 10px;
}

input{
  font-size: 10pt;
  min-height: 40px;
  height: 40px;
  line-height: 40px;
}

.content{
  box-sizing:border-box;
  padding: 5px;
  background-color: white;
  width: 100%;
  height: 150px;
  border-radius: 10px;
  margin-bottom: 10px;
}

button::after {
  border-radius: 0;
}
button{
  border-radius: 0;
}

.pubbtn{
  position: fixed;
  bottom: 0px;
  display: inline-block;
  width: 100%;
  height: 40px;
  background-color: green;
  color: white;
  text-align: center;
  font-size: 10pt;
  line-height: 40px;
}

.sc{
  padding-bottom: 10px;
  margin-bottom: 40px;
}

.textcontent{
  font-size: 10pt;
}